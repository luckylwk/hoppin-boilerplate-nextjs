{
  "name": "hoppin-boilerplate",
  "version": "0.0.1",
  "description": "Hoppin Boilerplate with Next.js",
  "main": "next.config.js",
  "engines": {
    "node": "12.13.1"
  },
  "dependencies": {
    "@zeit/next-css": "1.0.1",
    "dotenv": "8.0.0",
    "hoppin-design-system": "https://github.com/luckylwk/hoppin-design-system.git",
    "ky": "0.11.1",
    "ky-universal": "0.2.2",
    "next": "11.1.3",
    "next-purgecss": "3.1.1",
    "prop-types": "15.7.2",
    "react": "16.8.0",
    "react-dom": "16.8.0",
    "react-icons": "3.7.0",
    "react-motion": "^0.5.2",
    "react-router-dom": "5.0.1"
  },
  "devDependencies": {
    "babel-eslint": "10.0.2",
    "babel-jest": "24.8.0",
    "babel-plugin-styled-components": "^1.10.6",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "eslint": "6.1.0",
    "eslint-config-airbnb": "17.1.1",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.14.2",
    "jest": "24.8.0",
    "prettier": "1.18.2",
    "react-test-renderer": "16.8.6"
  },
  "scripts": {
    "test": "jest --detectOpenHandles",
    "dev": "next dev",
    "dev:server": "nodemon server.js",
    "build": "next build",
    "start": "next start",
    "start:server": "NODE_ENV=production node server.js",
    "lint": "eslint --ext .js,.jsx .",
    "pretty": "prettier --write '*.{js,jsx,json,css}' '**/*.{js,jsx,json,css}'",
    "pretty/test": "prettier --check '*.{js,jsx,json,css}' '**/*.{js,jsx,json,css}'"
  },
  "author": "Luuk Derksen <luuk@gohoppin.com>",
  "license": "MIT",
  "jest": {
    "setupFiles": [
      "<rootDir>/__tests__/setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.(js|jsx)"
    ],
    "transform": {
      "^.+\\.(js|jsx)?$": "babel-jest"
    },
    "modulePaths": [
      ".",
      "node_modules",
      ".next",
      "pages",
      "hocs",
      "components",
      "utils"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      ".next"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>/__mocks__/style-mock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/file-mock.js"
    }
  }
}
